<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddXeActivity">
    <ImageView
        android:src="@drawable/image_search_24px"
        android:layout_margin="10dp"
        android:id="@+id/img_xe_may"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <EditText
        android:id="@+id/et_ten_xe_may"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập tên xe máy"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_gia_xe_may"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập giá xe máy"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_mau_xe_may"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập màu xe máy"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/et_mo_ta_xe_may"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập mô tả xe máy"
        android:minHeight="48dp" />
    <Button
        android:layout_margin="10dp"
        android:id="@+id/btn_them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"/>
    <Button
        android:id="@+id/btn_quay_lai"
        android:backgroundTint="#8C620D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"/>
</LinearLayout>