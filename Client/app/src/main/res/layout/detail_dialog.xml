<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_xe_mayD"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/tv_ten_xe_mayD"
        android:text="Tên xe máy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <TextView
        android:textSize="20dp"
        android:text="Giá xe máy"
        android:id="@+id/tv_gia_xe_mayD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <TextView
        android:textSize="20dp"
        android:text="Màu xe máy"
        android:id="@+id/tv_mau_xe_mayD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />
    <TextView
        android:textSize="20dp"
        android:text="Mô tả xe máyD"
        android:id="@+id/tv_mo_ta_xe_mayD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />
</LinearLayout>